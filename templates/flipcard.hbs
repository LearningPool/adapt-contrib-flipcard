<div class="flipcard__inner component__inner" role="region" aria-label="{{_globals._components._flipcard.ariaRegion}}">
  {{> component this}}
    <div class="flipcard__widget component__widget clearfix">
      {{#each _items}}
        <div class="flipcard__item component__item item-{{@index}} {{_flipDirection}}">
          <button class="flipcard__item-face flipcard__item-front">
            <img src="{{frontImage.src}}" class="flipcard__item-frontImage" aria-label="{{frontImage.alt}}">
          </button>
          <button class="flipcard__item-face flipcard__item-back">
            {{#if backTitle}}
              <div class="flipcard__item-back-title" role="heading" aria-live="polite">
                {{{backTitle}}}
              </div>
            {{/if}}
            {{#if backBody}}
              <div class="flipcard__item-back-body" aria-live="polite">
                {{{backBody}}}
              </div>
            {{/if}}
          </button>
       </div>
      {{/each}}
  </div>
</div>